@model Reviews
@{
    ViewData["Title"] = "Отзывы";
}

<!-- Оповещение о успешной регистрации -->
@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="blur-background1">
    <img class="bgimg" src="/Resources/faq.gif" alt="Фоновое изображение"> <!-- Используйте свой путь к изображению -->
    <div class="background2">
        <div class="background">         
            <form class="formenter" method="post" asp-controller="Reviews" asp-action="Check">
                <h1>Создание отзыва</h1>
                <label asp-for="Header">Заголовок:</label>
                <input asp-for="Header" />
                <span asp-validation-for="Header"></span> <!-- обработка ошибок-->

                <label asp-for="Text">Текст:</label>
                <input asp-for="Text" />
                <span asp-validation-for="Text"></span>
                <button type="submit">Отправить</button>
            </form>
        </div>
    </div>
</div>

<!-- Скрипт для автоматического скрытия оповещения -->
<script>
    // Ждем 5 секунд и скрываем оповещение
    setTimeout(function () {
        document.getElementById("successAlert").style.display = "none";
    }, 5000);
</script>
